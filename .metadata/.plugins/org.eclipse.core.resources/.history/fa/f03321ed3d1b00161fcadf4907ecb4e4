interface Choice { // 카드 번호 입력 받음
	void choice(int num); 
}

interface ComChoice { // 카드 번호 입력 받음
	void comchoice(int com, int com2); 
}

class play implements Choice, ComChoice{
	public int pHP, cHP;
	public int com, num;
	
	public void SetHP(int pHP, int cHP) 
	{ 
		this.pHP = pHP; this.cHP = cHP;
	}
	
	public void choice(int num) // 
	{
		switch (num){
			case 1 : cHP--; System.out.println("->보스 공격! HP-1"); 
			System.out.println("( 플레이어 체력 : " + pHP + " ) ( 보스 체력 : " + cHP + " )"); break;
			case 2 : cHP-=3; System.out.println("->보스 강타! HP-3");
			System.out.println("( 플레이어 체력 : " + pHP + " ) ( 보스 체력 : " + cHP + " )"); break;
			case 3 : pHP+=4; System.out.println("+>플레이어체력 회복! HP+4");
			System.out.println("( 플레이어 체력 : " + pHP + " ) ( 보스 체력 : " + cHP + " )"); break;
			case 4 : System.out.println("보스 공격 방어! (다음 턴 적용)"); break;
			case 5 : System.out.println("보스 공격 반사! (다음 턴 적용)"); break;
		}
	}
		
	public void comchoice(int com, int num)
	{
		this.com = com;
		this.num = num;
		
		System.out.println(""); System.out.println("-------------------"); 
		System.out.println("    <<보스 턴!>>    ");
		
		switch (com){
			case 1 : 
				if(num == 4) {
					System.out.println("플레이어 공격 방어!");
				}
				else if(num == 5) {
					cHP-=5; System.out.println("공격 반사 사용!");
				}
				else if(num != 4 || num !=5) pHP-=5; System.out.println("->플레이어 공격! HP-5");
			System.out.println("( 플레이어 체력 : " + pHP + " ) ( 보스 체력 : " + cHP + " )"); break;
			
			case 2 : 
				if(num == 4) {
					System.out.println("플레이어 공격 방어!");
				}
				else if(num == 5) {
					cHP-=8; System.out.println("공격 반사 사용!");
				}
				else if(num != 4 || num !=5) pHP-=8; System.out.println("->플레이어 강타! HP-8");
			System.out.println("( 플레이어 체력 : " + pHP + " ) ( 보스 체력 : " + cHP + " )"); break;
			
			case 3 : cHP+=8; System.out.println("+>보스체력 회복! HP+8");
			System.out.println("( 플레이어 체력 : " + pHP + " ) ( 보스 체력 : " + cHP + " )"); break;
			
			case 4 : 
				if(num == 4) {
					System.out.println("플레이어 공격 방어!");
				}
				else if(num == 5) {
					cHP-=10; System.out.println("공격 반사 사용!");
				}
				else if(num != 4 || num !=5) cHP-=10; pHP-=10; System.out.println("+>보스 육참골단 사용! 플레이어, 보스  HP-10!");
				
			default : System.out.println("** 보스 스턴! **"); 
			System.out.println("( 플레이어 체력 : " + pHP + " ) ( 보스 체력 : " + cHP + " )"); break;
			
		}
		System.out.println(""); System.out.println("");
	}
	
	public int PlayHP() 
	{return pHP;}
	public int ComHP() 
	{return cHP;}
	
	public void display() {
		System.out.println("( 플레이어 체력 : " + pHP + " ) ( 보스 체력 : " + cHP + " )");
	}
}