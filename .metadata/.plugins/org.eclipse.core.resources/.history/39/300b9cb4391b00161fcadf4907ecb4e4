interface Choice { // 카드 번호 입력 받음
	void choice(int num); 
}

interface ComChoice { // 카드 번호 입력 받음
	void comchoice(int com, int com2); 
}

class play implements Choice, ComChoice{
	public int pHP, cHP;
	
	public void SetHP(int pHP, int cHP) 
	{ 
		this.pHP = pHP; this.cHP = cHP;
	}
	
	public void choice(int num) // 
	{
		switch (num){
			case 1 : cHP--; System.out.println("->보스 공격! HP-1"); 
			System.out.println("( 플레이어 체력 : " + pHP + " ) ( 보스 체력 : " + cHP + " )"); break;
			case 2 : cHP-=3; System.out.println("->보스 강타! HP-3");
			System.out.println("( 플레이어 체력 : " + pHP + " ) ( 보스 체력 : " + cHP + " )"); break;
			case 3 : pHP+=4; System.out.println("+>플레이어체력 회복! HP+4");
			System.out.println("( 플레이어 체력 : " + pHP + " ) ( 보스 체력 : " + cHP + " )"); break;
		}
	}
		
	public void comchoice(int com, int com2)
	{
		switch (com){
			case 1 : pHP-=5; System.out.println("->플레이어 공격! HP-5");
			System.out.println("( 플레이어 체력 : " + pHP + " ) ( 보스 체력 : " + cHP + " )"); break;
			case 2 : pHP-=8; System.out.println("->플레이어 강타! HP-8");
			System.out.println("( 플레이어 체력 : " + pHP + " ) ( 보스 체력 : " + cHP + " )"); break;
			case 3 : cHP+=8; System.out.println("+>보스체력 회복! HP+8");
			System.out.println("( 플레이어 체력 : " + pHP + " ) ( 보스 체력 : " + cHP + " )"); break;
			default : System.out.println("** 보스 스턴! **"); 
			System.out.println("( 플레이어 체력 : " + pHP + " ) ( 보스 체력 : " + cHP + " )"); break;
		}
	}
	
	public int PlayHP() 
	{return pHP;}
	public int ComHP() 
	{return cHP;}
	
	public void display() {
		System.out.println("( 플레이어 체력 : " + pHP + " ) ( 보스 체력 : " + cHP + " )");
	}
}